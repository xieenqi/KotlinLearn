<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mykotlin.MainActivity">

    <TextView
        android:id="@+id/sendKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! 我要到kotlin去看看" />

    <me.itangqi.waveloadingview.WaveLoadingView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wave_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:paddingEnd="15dp"
        app:paddingStart="10dp"
        app:wlv_borderColor="@color/colorAccent"
        app:wlv_borderWidth="1dp"
        app:wlv_progressValue="28"
        app:wlv_shapeType="circle"
        app:wlv_titleBottom="拥有量"
        app:wlv_titleCenter="28%"
        app:wlv_titleTop="未完成量"
        app:wlv_waveAmplitude="20"
        app:wlv_waveColor="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始写入" />

            <Button
                android:id="@+id/bt02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提取写入的数据" />

            <Button
                android:id="@+id/bt03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹性动画" />

            <Button
                android:id="@+id/bt04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scrollView滑动冲突" />

            <Button
                android:id="@+id/bt05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="折叠的textview" />

            <Button
                android:id="@+id/bt06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="带一键删除的EditText" />

            <Button
                android:id="@+id/bt07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图标统计控件 折线图" />

            <Button
                android:id="@+id/bt08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RxJava背压测试" />

            <Button
                android:id="@+id/bt09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="软键盘的 弹出与隐藏" />

            <Button
                android:id="@+id/bt10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="weblineTitle" />
            <Button
                android:id="@+id/bt11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="router 路由框架" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
