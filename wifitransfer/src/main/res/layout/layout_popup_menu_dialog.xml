<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="无线传输"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shared_wifi_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wifi_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shared_wifi_state"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/chuanshu_ing_wifi" />

        <TextView
            android:id="@+id/wifi_conlection_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="尚未连接到WiFi网络"
            android:textColor="#333333"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2" />

        <TextView
            android:id="@+id/popup_menu_subtitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="连接WiFi网络，您可以要通过电脑轻松管理文件"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="请进入手机 设置界面，打开WiFi开关"
            android:textColor="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/shared_wifi_settings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="设置网络"
            android:textColor="@color/error_color_material" />
    </LinearLayout>
    <!-- 完成连接-->
    <LinearLayout
        android:id="@+id/wifi_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/chuanshu_shouji" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/chuanshu_ing_xiaowifiblack" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/chuasnhu_diannao" />
        </LinearLayout>

        <TextView
            android:id="@+id/wifi_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="无需数据线，通过电脑轻松管理手机"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2" />

        <TextView
            android:id="@+id/shared_wifi_state_hint"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="请在电脑浏览器打开网页"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shared_wifi_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#f2f2f2"
            android:padding="3dp"
            android:text="http://10.100.9.195:8081"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="传输中请保持此界面不被关闭"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="请保持手机和电脑在同一局域网"
            android:textColor="#333333"
            android:textSize="14sp" />

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:orientation="horizontal">-->

        <!--<Button-->
        <!--style="?android:attr/borderlessButtonStyle"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/cancel" />-->


        <!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>